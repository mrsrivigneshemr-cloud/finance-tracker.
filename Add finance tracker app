<body>
    <div class="container">
        <h1>ğŸ’° Finance Tracker</h1>
        
        <div class="card">
            <h3>Current Balance</h3>
            <div class="card-value" id="balance">â‚¹1,997</div>
        </div>

        <div class="card">
            <h3>ğŸ’¸ Quick Transaction</h3>
            <input type="number" id="amount" placeholder="Enter amount">
            <select id="type">
                <option value="income">ğŸ’° Money Received</option>
                <option value="family">ğŸ‘¨â€ğŸ‘©â€ğŸ‘§â€ğŸ‘¦ Family</option>
                <option value="food">ğŸ½ï¸ Food</option>
                <option value="travel">ğŸš‚ Travel</option>
                <option value="other">ğŸ“¦ Other</option>
            </select>
            <button onclick="addTransaction()">Add Transaction</button>
        </div>

        <div class="card">
            <h3>ğŸ“… Daily Expenses</h3>
            <div class="day-box">
                <div class="day-name">Today</div>
                <input type="number" class="day-input" placeholder="Travel" id="travel" onchange="updateTotal()">
                <input type="number" class="day-input" placeholder="Food" id="food" onchange="updateTotal()">
                <input type="number" class="day-input" placeholder="Other" id="other" onchange="updateTotal()">
                <div class="day-total" id="total">â‚¹0</div>
            </div>
        </div>

        <div class="card">
            <h3>ğŸ“‹ Recent Transactions</h3>
            <div id="transactions">No transactions yet</div>
        </div>

        <button onclick="resetData()">ğŸ”„ Reset All</button>
    </div>

    <script>
        let balance = 1997;
        let transactions = [];

        function addTransaction() {
            const amount = parseFloat(document.getElementById('amount').value);
            const type = document.getElementById('type').value;
            
            if (!amount || amount <= 0) {
                alert('Please enter valid amount!');
                return;
            }

            if (type === 'income') {
                balance += amount;
            } else {
                balance -= amount;
            }

            transactions.unshift({
                amount: amount,
                type: type,
                date: new Date().toLocaleDateString()
            });

            document.getElementById('amount').value = '';
            updateDisplay();
        }

        function updateTotal() {
            const travel = parseFloat(document.getElementById('travel').value) || 0;
            const food = parseFloat(document.getElementById('food').value) || 0;
            const other = parseFloat(document.getElementById('other').value) || 0;
            const total = travel + food + other;
            
            document.getElementById('total').textContent = 'â‚¹' + total;
        }

        function updateDisplay() {
            document.getElementById('balance').textContent = 'â‚¹' + balance;
            
            const transDiv = document.getElementById('transactions');
            if (transactions.length === 0) {
                transDiv.innerHTML = 'No transactions yet';
            } else {
                let html = '';
                transactions.slice(0, 3).forEach(t => {
                    const sign = t.type === 'income' ? '+' : '-';
                    const color = t.type === 'income' ? 'green' : 'red';
                    html += `<div style="padding: 5px; border-bottom: 1px solid #eee;">
                        <span style="color: ${color}; font-weight: bold;">${sign}â‚¹${t.amount}</span>
                        <small style="color: #666; float: right;">${t.date}</small>
                    </div>`;
                });
                transDiv.innerHTML = html;
            }
        }

        function resetData() {
            if (confirm('Reset all data?')) {
                balance = 1997;
                transactions = [];
                document.getElementById('travel').value = '';
                document.getElementById('food').value = '';
                document.getElementById('other').value = '';
                updateDisplay();
                updateTotal();
            }
        }

        // Initialize
        updateDisplay();
    </script>
